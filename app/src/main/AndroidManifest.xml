<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mynotesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyNotesApp">
        <activity android:name="model.splash" android:theme="@style/noActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="authentication.Register" />
        <activity android:name="authentication.Login" />
        <activity
            android:name="note.editNotes"
            android:theme="@style/noActionBarTheme" />
        <activity
            android:name="note.addNotes"
            android:label="@string/title_activity_add_notes"
            android:theme="@style/Theme.MyNotesApp.NoActionBar" />
        <activity
            android:name="note.node_details"
            android:label="@string/title_activity_node_details"
            android:theme="@style/Theme.MyNotesApp.NoActionBar" />
        <activity
            android:name="model.MainActivity"
            android:theme="@style/noActionBarTheme">
        </activity>
    </application>

</manifest>